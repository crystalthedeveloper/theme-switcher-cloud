const scriptUrl = "/theme-switcher/theme-switcher.js";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Theme Switcher Cloud</title>
  </head>
  <body>
    <main>
      <h1>Theme Switcher Cloud</h1>
      <p>
        This project deploys the <code>theme-switcher.js</code> script to Webflow Cloud so it
        can be referenced from any Webflow site without needing to self-host it.
      </p>
      <p>
        The script is published at <code>{scriptUrl}</code> inside the mount path you
        configure when running <code>webflow cloud deploy</code>.
      </p>
    </main>
  </body>
</html>
